{{#if case}}
  {{#cf-content
    documentId=(decode-id case.document.id)
    disabled=disabled
    context=(hash
      caseId=case.id
      instanceId=case.meta.camac-instance-id
    )
  as |content|}}
    {{#if (gt content.document.fieldsets.length 1)}}
      <div uk-grid>
        <div class="uk-width-1-1 uk-width-1-3@s">{{content.navigation}}</div>
        <div class="uk-width-1-1 uk-width-2-3@s">
          {{content.form}}
          <hr>
          {{content.pagination}}
        </div>
      </div>
    {{else}}
      {{content.form}}
    {{/if}}
  {{/cf-content}}
{{/if}}