<div class="uk-grid-collapse" uk-grid>
  <h3 class="uk-width-1-3 uk-text-uppercase">{{t "instances.masterData"}}</h3>
  <div class="uk-width-2-3">
    <table class="uk-table">
      <tbody>
        <tr>
          <th class="uk-text-bold">
            {{t "instances.ebau"}}
          </th>
          <td>{{this.data.ebauNr}}</td>
          <th class="uk-text-bold">
            {{t "instances.address"}}
          </th>
          <td>{{this.data.address}}</td>
        </tr>
        <tr>
          <th class="uk-text-bold">
            {{t "instances.type"}}
          </th>
          <td>{{this.data.type}}</td>
          <th class="uk-text-bold">
            {{t "instances.municipality"}}
          </th>
          <td>{{this.data.municipality}}</td>
        </tr>
        <tr>
          <th class="uk-text-bold">
            {{t "instances.status.title"}}
          </th>
          <td>{{this.instanceState}}</td>
          <th class="uk-text-bold">
            {{t "instances.lead"}}
          </th>
          <td>{{this.activeService}}</td>
        </tr>
        <tr>
          <th></th>
          <td></td>
          <th class="uk-text-bold">
            {{t "instances.buildingSpecification"}}
          </th>
          <td>{{this.data.buildingSpecification}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<hr>
<div class="uk-margin-top uk-grid-collapse" uk-grid>
  <h3 class="uk-width-1-3 uk-text-uppercase">
    {{t "instances.actions"}}
  </h3>
  <div class="uk-width-2-3 uk-padding-small uk-grid-small" uk-grid>
    <h4 class="uk-width-2-3 uk-text-uppercase">{{t "instances.activateFurtherPersons"}}</h4>
    <p class="uk-width-3-3">{{t "instances.activateFurtherPersonsText"}}</p>
    <LinkTo @route="instances.edit.applicants" class="uk-button uk-button-default uk-width-1-3">
      {{t "instances.managePermissions"}}
    </LinkTo>
  </div>
</div>
<hr>
<div class="uk-margin-top uk-grid-collapse" uk-grid>
  <h3 class="uk-width-1-3 uk-text-uppercase">
    {{t "nav.feedback"}}
    {{#if this.feedback}}<UkBadge @label={{this.feedback.length}} class="uk-margin-small-left" />{{/if}}
  </h3>
  <div class="uk-width-2-3 uk-padding-small uk-padding-remove-top">
    {{#if this.feedback}}
      {{be-attachment-list loading=this.feedbackLoading attachments=this.feedback}}
      <hr>
    {{else}}
      <div>{{t "feedback.info"}}</div>
    {{/if}}
  </div>
</div>