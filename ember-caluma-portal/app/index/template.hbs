<h1 class="uk-text-center">{{t "index.welcome"}}</h1>
<h4 class="uk-text-center uk-margin-remove-top uk-margin-large">{{t "index.nextStep"}}</h4>

<div class="uk-flex uk-flex-center">
  {{#if (can "create instance")}}
    <div class="uk-flex uk-flex-middle uk-margin-small-left uk-margin-small-right">
      <LinkTo @route="instances.new" class="uk-button uk-button-default uk-width-medium uk-height-medium uk-flex uk-flex-middle uk-flex-center uk-flex-column">
        <UkIcon @icon="plus" @ratio="3" class="uk-margin" />
        {{t "instances.new.title"}}
      </LinkTo>
    </div>
  {{/if}}

  <div class="uk-flex uk-flex-middle uk-margin-small-left uk-margin-small-right">
    <LinkTo @route="instances.index" class="uk-button uk-button-default uk-width-medium uk-height-medium uk-flex uk-flex-middle uk-flex-center uk-flex-column">
      <UkIcon @icon="pencil" @ratio="3" class="uk-margin" />
      {{t "instances.edit"}}
    </LinkTo>
  </div>
</div>