
<LoadingOrNotfound
  @loading={{this.publicInstance.isRunning}}
  @hasPermission={{this.publicInstance.value}}
>
  {{#if (macroCondition (macroGetOwnConfig "features.publication.form"))}}
    <UkTab as |Tab|>
      <Tab.item @href={{concat "/public-instances/" @model "/form"}} as |active|>
        <AriaHeading @enabled={{active}}>
          {{t "publicInstancesDetail.form"}}
        </AriaHeading>
      </Tab.item>
      <Tab.item @href={{concat "/public-instances/" @model "/documents"}} as |active|>
        <AriaHeading @enabled={{active}}>
          {{t "publicInstancesDetail.documents"}}
        </AriaHeading>
      </Tab.item>
      <RelatedPublications @dossierNr={{this.publicInstance.value.dossierNr}} @instanceId={{this.publicInstance.value.instanceId}} />
    </UkTab>
  {{/if}}

  {{outlet}}
</LoadingOrNotfound>