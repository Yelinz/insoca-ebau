
<LoadingOrNotfound
  @loading={{this.fetchPublicInstance.isRunning}}
  @hasPermission={{this.publicInstance}}
>
  {{#if (has-feature "publication.form")}}
    <UkTab as |Tab|>
      <Tab.item @href={{concat "/public-instances/" @model}} as |active|>
        <AriaHeading @enabled={{active}}>
          {{t "publicInstancesDetail.form"}}
        </AriaHeading>
      </Tab.item>
      <Tab.item @href={{concat "/public-instances/" @model "/documents"}} as |active|>
        <AriaHeading @enabled={{active}}>
          {{t "publicInstancesDetail.documents"}}
        </AriaHeading>
      </Tab.item>
    </UkTab>
  {{/if}}

  {{outlet}}
</LoadingOrNotfound>