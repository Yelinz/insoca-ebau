{{#if buttonDisabled}}
  <div class="uk-alert uk-alert-warning">
    <strong>{{t "submit.warning"}}</strong>
    <br>
    <ul class="uk-list uk-list-bullet">
      {{#each invalidFields as |field|}}
        {{#let (get-field-path field) as |path|}}
          <li>
            {{#link-to (query-params section=path.link.section subSection=path.link.subSection)}}
              {{path.label}}
            {{/link-to}}
          </li>
        {{/let}}
      {{/each}}
    </ul>
  </div>
{{/if}}

{{uk-button disabled=buttonDisabled label="Einreichen" loading=submit.isRunning on-click=(perform submit)}}

