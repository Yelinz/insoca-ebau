<div class="uk-text-right">
  {{this.paginationInfo}}
</div>

<table {{did-insert this.setup}} {{did-update this.setup @filter}}>
  <thead>
    <tr>
      {{#each this.tableColumns as |tColumn|}}
        <th>
          {{t (concat "cases.tableHeaders." tColumn)}}
        </th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each this.casesQuery.value as |node|}}
      <tr
        class={{if (and @instancesOnSamePlot (includes node.raw.meta.dossier-number this.linkedAndOnSamePlot)) "uk-text-muted"}}
      >
        {{#each this.tableColumns as |tColumn|}}
          <td
            class={{
              if (eq tColumn "intent") "uk-text-truncate uk-table-expand"
            }}
          >
            {{#if (eq tColumn "applicant")}}
              {{get node (concat tColumn ".name")}}
            {{else if (eq tColumn "processingDeadline")}}
              {{date-from-now (get node tColumn)}}
            {{else if (eq tColumn "instanceId")}}
              <a href="/index/redirect-to-instance-resource/instance-id/{{node.instanceId}}">
                {{node.instanceId}}
              </a>
            {{else}}
              {{get node tColumn}}
            {{/if}}
          </td>
        {{/each}}
        {{#if @instancesOnSamePlot}}
          {{#if (includes node.raw.meta.dossier-number this.linkedAndOnSamePlot)}}
            <td>
              <button
                class="uk-button-link uk-flex"
                ratio="0.7"
                uk-icon=""
                type="button"
                title={{t "cases.miscellaneous.unLinkInstance" }}
                {{on "click" (perform @onUnlink node.instance)}}>
                  <i class="unlink-instance attachment-icon" />
              </button>
            </td>
          {{else}}
            <td>
              <button
                class="uk-button-link uk-flex"
                ratio="0.7"
                uk-icon=""
                disabled={{if (eq this.instanceIdAsInt node.instanceId) "true"}}
                type="button"
                title={{t "cases.miscellaneous.linkInstance"}}
                {{on "click" (perform @onLink node.instanceId)}}>
                  <i class="link-instance attachment-icon" />
              </button>
            </td>
          {{/if}}
        {{/if}}
      </tr>
    {{else}}
      <tr>
        <td colspan={{this.tableColumns.length}} class="uk-text-center">
          {{#if this.casesQuery.isLoading}}
            {{t "global.loading"}}
          {{else}}
            {{t "global.empty"}}
          {{/if}}
        </td>
      </tr>
    {{/each}}

    <tr>
      {{#if (and this.casesQuery.hasNextPage (not this.casesQuery.isLoading))}}
        <td colspan={{this.tableColumns.length}} class="uk-text-center">
          <button type="button" {{on "click" this.loadNextPage}}>
            {{t "global.loadMore"}}
          </button>
        </td>
      {{/if}}
    </tr>
  </tbody>
</table>
<div class="uk-text-right">
  {{this.paginationInfo}}
</div>
