<tr>
  {{#if @highlight}}
    <td class="highlight {{this.highlightClass}}"></td>
  {{/if}}
  {{#each @columns as |column|}}
    <td>
      {{#if (eq column "identifier")}}
        <a href="{{@workItem.instanceLink}}">{{@workItem.instanceIdentifier}}</a>
      {{else if (eq column "type")}}
        {{@workItem.instanceName}}
      {{else if (eq column "task")}}
        {{#if @workItem.directLink}}
          <a href="{{@workItem.directLink}}">{{@workItem.name}}</a>
        {{else}}
          {{@workItem.name}}
        {{/if}}
      {{else if (eq column "deadline")}}
        {{moment-from @workItem.deadline}}
      {{else if (eq column "created")}}
        {{format-date
          @workItem.createdAt
          day="2-digit"
          month="2-digit"
          year="numeric"
          hour="2-digit"
          minute="2-digit"
          hour12=false
        }}
      {{else if (eq column "responsible")}}
        {{#each @workItem.assignedUserInformation as |user|}}
          {{user.fullName}}
        {{else}}
          -
        {{/each}}
      {{else if (eq column "service")}}
        {{#each @workItem.addressedServices as |service|}}
          {{service.name}}
        {{else}}
          -
        {{/each}}
      {{else if (eq column "closedAt")}}
        {{format-date
          @workItem.closedAt
          day="2-digit"
          month="2-digit"
          year="numeric"
          hour="2-digit"
          minute="2-digit"
          hour12=false
        }}
      {{else if (eq column "closedBy")}}
        {{if @workItem.closedByUser @workItem.closedByUser.fullName "-"}}
      {{/if}}
    </td>
  {{/each}}
  <td>
    {{#if this.actions.length}}
      <ContextMenu @actions={{this.actions}} />
    {{/if}}
  </td>
</tr>
