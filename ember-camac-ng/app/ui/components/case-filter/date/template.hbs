<CaseFilter::Base @filterName={{@filterName}}>
  <PikadayInput
    @onSelection={{this.updateFilter}}
    @format="DD.MM.YYYY"
    @useUTC={{true}}
    @placeholder={{or
      @placeholder
      (t (concat "cases.filters." @filterName "-placeholder"))
    }}
    @value={{this._value}}
    @maxDate={{this.maxDate}}
    @minDate={{this.minDate}}
    class="uk-width-1"
  />
</CaseFilter::Base>
