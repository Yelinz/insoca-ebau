{{! template-lint-disable require-input-label }}
<CaseFilter::Base @filterName={{@filterName}}>
  <input
    type="text"
    class="uk-width-1"
    placeholder={{or
      @placeholder
      (t (concat "cases.filters." @filterName "-placeholder"))
    }}
    {{pikaday
      value=this._value
      onSelect=this.updateFilter
      maxDate=this.maxDate
      minDate=this.minDate
    }}
  />
</CaseFilter::Base>
