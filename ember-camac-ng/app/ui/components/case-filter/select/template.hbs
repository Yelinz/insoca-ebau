{{! template-lint-disable require-input-label }}
{{#if @filterOptions.length}}
  <CaseFilter::Base @filterName={{@filterName}}>
    <PowerSelect
      id={{concat "case-filter__" @filterName}}
      class="uk-width-1 case-filter__select"
      @dropdownClass="case-filter__select"
      @triggerClass="case-filter__select"
      @searchEnabled={{true}}
      @searchField={{or @labelField "label"}}
      @allowClear={{true}}
      @options={{@filterOptions}}
      @selected={{this.value}}
      @placeholder={{or
        @placeholder
        (t (concat "cases.filters." @filterName "-placeholder"))
      }}
      @onChange={{this.onChange}} as |filterOption|
    >
      {{if @labelField (get filterOption @labelField) filterOption.label}}
    </PowerSelect>
  </CaseFilter::Base>
{{/if}}
