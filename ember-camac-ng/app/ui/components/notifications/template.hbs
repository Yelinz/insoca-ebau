<div>
  {{#each this.notifications.all as |notification|}}
    <div
      role="button"
      class="alert hinweisbox buttonstyle {{notification.type}}"
      {{on "click" (fn this.remove notification)}}
    >
      <p class="text">
        {{notification.message}}
      </p>
    </div>
  {{/each}}
</div>