{{#if this.publication}}
  <CfContent
    @documentId={{decode-id this.publication.document.id}}
    @disabled={{cannot "edit publication" this.publication}}
  />
{{/if}}

{{#if (and (can "create publication") this.createPublicationWorkItem)}}
  <UkButton
    @color="primary"
    @disabled={{this.createPublication.isRunning}}
    @loading={{this.createPublication.isRunning}}
    @on-click={{perform this.createPublication}}
  >
    {{t "publication.new"}}
  </UkButton>
{{/if}}
