{{#-in-element container}}
  <div id="modal-{{elementId}}">
    <div class="uk-modal-dialog uk-modal-body">
      <form {{action (perform save) on='submit'}}>
        <button type="button" class="uk-modal-close-default" uk-close {{action (toggle 'visible' this)}}></button>

        <h2 class="uk-modal-title">Eintrag hinzuf√ºgen</h2>

        {{#each columns as |column|}}
          <div class="uk-margin">
            <label class="uk-form-label uk-text-bold {{if (get this (concat '_value.error.' column.name)) 'uk-text-danger'}}">
              {{column.label}}
              {{#if column.required}}
                <span class="uk-text-danger">*</span>
              {{/if}}
            </label>
            {{component (concat 'camac-input-' column.type)
              renderInPlace=true
              config=column.config
              on-change=(queue (action 'change' column.name) (action 'checkRequired' column.name))
              model=(hash value=(get _value column.name))
            }}
            {{#with (get this (concat '_value.error.' column.name)) as |error|}}
              {{camac-input-error error.validation}}
            {{/with}}
          </div>
        {{/each}}

        <div class="uk-text-right">
          {{#uk-button on-click=(action (mut visible) false)}}Abbrechen{{/uk-button}}
          {{#uk-button loading=save.isRunning disabled=(not _value.isValid) color='primary' type='submit'}}Speichern{{/uk-button}}
        </div>
      </form>
    </div>
  </div>
{{/-in-element}}
