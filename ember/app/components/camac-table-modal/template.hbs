<div class="uk-modal-dialog uk-modal-body">
  <form {{action 'save' on='submit'}}>
    <button type="button" class="uk-modal-close-default" uk-close {{action (toggle 'visible' this)}}></button>

    <h2 class="uk-modal-title">Eintrag hinzuf√ºgen</h2>

    {{#each fields as |field|}}
      <div class="uk-margin">
        <label class="uk-form-label uk-text-bold">{{field.label}}</label>
        {{component (concat 'camac-input-' field.type) renderInPlace=true config=field.config on-change=(action 'change' field.name) model=(hash value=(get _value field.name))}}
      </div>
    {{/each}}

    <div class="uk-text-right">
      {{#uk-button on-click=(action (mut visible) false)}}Abbrechen{{/uk-button}}
      {{#uk-button color='primary' type='submit'}}Speichern{{/uk-button}}
    </div>
  </form>
</div>
