{{#with model.instance as |instance|}}
  <ul class="uk-width-1-1" uk-tab>
    <li class={{if (eq currentPage "form") 'uk-active'}}>
      {{link-to 'Gesuch' 'instances.edit.index' class='uk-text-bolder'}}
    </li>
    {{#if model.meta.is-applicant}}
      <li class={{if (eq router.currentRouteName 'instances.edit.involvierte-personen') 'uk-active'}}>
        {{link-to 'Involvierte Personen' 'instances.edit.involvierte-personen' class='uk-text-bolder'}}
      </li>
      <li class={{if (eq router.currentRouteName 'instances.edit.freigegebene-unterlagen') 'uk-active'}}>
        {{link-to 'Freigegebene Unterlagen' 'instances.edit.freigegebene-unterlagen' class='uk-text-bolder'}}
      </li>
    {{else}}
      <li class={{if (eq router.currentRouteName 'instances.edit.publikationsdokumente') 'uk-active'}}>
        {{link-to 'Publikationsdokumente' 'instances.edit.publikationsdokumente' class='uk-text-bolder'}}
      </li>
    {{/if}}
  </ul>

  {{#if (eq currentPage "form")}}
    <div uk-grid>
      <div class="uk-width-1-1 uk-width-1-3@m">
        <ul class="uk-tab uk-tab-left">
          <li class={{if (eq router.currentRouteName 'instances.edit.index') 'uk-active'}}>
            {{link-to 'Allgemeine Informationen' 'instances.edit.index' class='uk-text-bolder'}}
          </li>
          {{#each navigation as |m|}}
            {{#if m.state}}
              {{camac-nav-module module=m}}
            {{/if}}
          {{/each}}
          {{#if model.meta.editable.length}}
            <li class={{if (eq router.currentRouteName 'instances.edit.submit') 'uk-active'}}>
              {{link-to 'Einreichen' 'instances.edit.submit' class='uk-text-bolder'}}
            </li>
          {{/if}}
        </ul>
      </div>

      <div class="uk-width-1-1 uk-width-2-3@m">
        <h1 class="uk-flex uk-flex-between uk-flex-wrap">
          {{#if instance.identifier}}{{instance.identifier}} - {{/if}}
          {{instance.form.description}}
          <span>
            {{uk-label label=instance.instanceState.description}}
          </span>
        </h1>

        <div uk-grid class="uk-margin uk-child-width-1-2">
          <div>
            {{#if hasPrev}}
              {{uk-button label='Zurück' loading=prev.isRunning on-click=(perform prev)}}
            {{/if}}
          </div>
          <div class="uk-text-right">
            {{#if hasNext}}
              {{uk-button label='Weiter' color='primary' loading=next.isRunning on-click=(perform next)}}
            {{/if}}
          </div>
        </div>

        <hr class="uk-margin uk-margin-medium-bottom">

        {{focusing-outlet}}

        <hr class="uk-margin uk-margin-medium-top">

        <div uk-grid class="uk-child-width-1-2">
          <div>
            {{#if hasPrev}}
              {{uk-button label='Zurück' loading=prev.isRunning on-click=(perform prev)}}
            {{/if}}
          </div>
          <div class="uk-text-right">
            {{#if hasNext}}
              {{uk-button label='Weiter' color='primary' loading=next.isRunning on-click=(perform next)}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{else}}
    {{outlet}}
  {{/if}}
{{/with}}
