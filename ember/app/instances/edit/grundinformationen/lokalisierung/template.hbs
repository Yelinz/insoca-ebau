<CamacForm @instance={{@model.instance}} @meta={{@model.meta}} as |form|>
  {{#form.input "bezeichnung"}}
    <h4>
      Bezeichnung und Lokalisierung des Vorhabens
    </h4>
  {{/form.input}}
  {{form.input "projektnummer"}}
</CamacForm>

<CamacPropertySelector
  @readonly={{not
    (or
      (eq @model.instance.instanceState.name "new")
      (eq @model.instance.instanceState.name "rejected")
    )
  }}
  @selected={{hash
    points=this.points.value
    parcels=this.parcels.value
    municipality=@model.instance.location.name
  }}
  @on-submit={{perform this.saveLocation}}
  @specialForm={{this.specialForm}}
/>