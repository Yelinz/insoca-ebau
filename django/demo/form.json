{
  "forms": {
    "baugesuch": ["grundinformationen", "grundinformationen.kategorisierung"]
  },
  "modules": {
    "grundinformationen": {
      "title": "Grundinformationen",
      "parent": null,
      "questions": []
    },
    "grundinformationen.kategorisierung": {
      "title": "Kategorisierung",
      "parent": "grundinformationen",
      "questions": [
        "kategorie-des-vorhabens",
        "art-der-anlage",
        "dokument-parzelle",
        "anlagen-mit-erheblichen-schadstoffemissionen",
        "anlagen-mit-erheblichen-schadstoffemissionen-welche",
        "anlagen-mit-erheblichen-schadstoffemissionen-wiesonicht",
        "hohe-der-anlage",
        "hohe-der-anlage-gte",
        "kosten-der-anlage",
        "kosten-der-anlage-gt",
        "tiefe-der-bohrung",
        "tiefe-der-bohrung-lte",
        "durchmesser-der-bohrung",
        "durchmesser-der-bohrung-lt",
        "bewilligung-bohrung",
        "bohrungsdaten",
        "grundeigentumerschaft",
        "gwr",
        "art-der-befestigten-flache",
        "zweck-der-warmepumpe",
        "standort-der-warmepumpe"
      ]
    }
  },
  "questions": {
    "kategorie-des-vorhabens": {
      "label":
        "Handelt es sich beim Bauvorhaben um eine Baute oder / und Anlage?",
      "type": "checkbox",
      "required": true,
      "config": {
        "options": ["Baute(n)", "Anlage(n)"]
      }
    },
    "art-der-anlage": {
      "label": "Welche Anlagearten sind geplant?",
      "type": "multiselect",
      "required": true,
      "active-expression": "'kategorie-des-vorhabens'|value == 'Anlage(n)'",
      "config": {
        "options": [
          "Befestigte Fläche",
          "Ver- / Entsorgungsleitung",
          "Reklame",
          "Terrainveränderung",
          "Wärmepumpe",
          "Sondierbohrung",
          "Solaranlage",
          "Abfallanlage, Deponie",
          "Antennen"
        ],
        "allow-custom": false
      }
    },
    "anlagen-mit-erheblichen-schadstoffemissionen": {
      "label":
        "Beinhaltet Ihr Vorhaben Anlagen mit erheblichen Schadstoffemissionen?",
      "type": "radio",
      "required": true,
      "active-expression": "'kategorie-des-vorhabens'|value != 'Anlage(n)'",
      "config": {
        "options": ["Ja", "Nein"]
      }
    },
    "anlagen-mit-erheblichen-schadstoffemissionen-welche": {
      "label": "Welche?",
      "type": "text",
      "required": true,
      "active-expression":
        "'anlagen-mit-erheblichen-schadstoffemissionen'|value == 'Ja'",
      "config": {}
    },
    "anlagen-mit-erheblichen-schadstoffemissionen-wiesonicht": {
      "label": "Wieso nicht?",
      "type": "text",
      "required": true,
      "active-expression":
        "'anlagen-mit-erheblichen-schadstoffemissionen'|value == 'Nein'",
      "config": {}
    },
    "dokument-parzelle": {
      "label": "Parzelle",
      "type": "document",
      "required": true,
      "config": {}
    },
    "art-der-befestigten-flache": {
      "label": "Um welche Art handelt es sich bei der befestigten Fläche?",
      "type": "select",
      "required": true,
      "config": {
        "options": [
          "Verkehrsfläche",
          "Lagerplatz",
          "Vorplatz",
          "Terasse, Sitzplatz"
        ]
      }
    },
    "hohe-der-anlage": {
      "label": "Wie hoch ist die Anlage in m?",
      "type": "number",
      "required": true,
      "config": {
        "step": 1,
        "min": 0
      }
    },
    "hohe-der-anlage-gte": {
      "label": "Wieso ist die Anlage nicht höher als oder gleich 10m?",
      "type": "text",
      "required": true,
      "active-expression": "'hohe-der-anlage'|value >= 10",
      "config": {}
    },
    "kosten-der-anlage": {
      "label": "Wie viel kostet die Anlage in CHF?",
      "type": "number",
      "required": true,
      "config": {
        "step": 1,
        "min": 0
      }
    },
    "kosten-der-anlage-gt": {
      "label": "Wieso kostet die Anlage nicht mehr als 10'000 CHF?",
      "type": "text",
      "required": true,
      "active-expression": "'kosten-der-anlage'|value > 10000",
      "config": {}
    },
    "tiefe-der-bohrung": {
      "label": "Wie tief wird gebohrt in m?",
      "type": "number",
      "required": true,
      "config": {
        "step": 1,
        "min": 0
      }
    },
    "tiefe-der-bohrung-lte": {
      "label": "Wieso wird nicht weniger tief oder gleich 10m gebohrt?",
      "type": "text",
      "required": true,
      "active-expression": "'tiefe-der-bohrung'|value <= 10",
      "config": {}
    },
    "durchmesser-der-bohrung": {
      "label": "Mit welchem Durchmesser in m wird gebohrt?",
      "type": "number",
      "required": true,
      "config": {
        "step": 1,
        "min": 0
      }
    },
    "durchmesser-der-bohrung-lt": {
      "label":
        "Wieso wird nicht mit einem kleineren Durchmesser als 10m gebohrt?",
      "type": "text",
      "required": true,
      "active-expression": "'durchmesser-der-bohrung'|value < 10",
      "config": {}
    },
    "bewilligung-bohrung": {
      "label": "Haben Sie eine Bohrbewilligung?",
      "type": "radio",
      "required": true,
      "active-expression":
        "'tiefe-der-bohrung'|value > 10 || 'durchmesser-der-bohrung'|value < 10",
      "config": { "options": ["Ja", "Nein"] }
    },
    "bohrungsdaten": {
      "label": "Haben Sie eine Bohrbewilligung",
      "type": "text",
      "required": true,
      "active-expression": "'tiefe-der-bohrung'|value > 100",
      "config": {}
    },
    "grundeigentumerschaft": {
      "label": "Grundeigentümerschaft:",
      "type": "table",
      "required": false,
      "config": {
        "columns": [
          {
            "name": "firma",
            "label": "Firma",
            "type": "text",
            "required": false,
            "config": {}
          },
          {
            "name": "name",
            "label": "Name, Vorname",
            "type": "text",
            "required": true,
            "config": {}
          }
        ]
      }
    },
    "gwr": {
      "label": "Gwr:",
      "type": "gwr",
      "required": true,
      "config": {
        "columns": [
          {
            "name": "firma",
            "label": "Firma",
            "type": "text",
            "required": false,
            "config": {}
          },
          {
            "name": "name",
            "label": "Name, Vorname",
            "type": "text",
            "required": true,
            "config": {}
          },
          {
            "name": "wohnungen",
            "label": "Wohnungsliste",
            "type": "table",
            "required": true,
            "config": {
              "columns": [
                {
                  "name": "stockwerk",
                  "label": "Stockwerk",
                  "type": "text",
                  "required": true,
                  "config": {}
                }
              ]
            }
          }
        ]
      }
    },
    "zweck-der-warmepumpe": {
      "label": "Zweck der Wärmepumpe:",
      "type": "checkbox",
      "required": false,
      "config": {
        "options": ["Heizen", "Warmwasser"]
      }
    },
    "standort-der-warmepumpe": {
      "label": "Standort der Wärmepumpe",
      "type": "text",
      "required": true,
      "active-expression": "'Heizen' in 'zweck-der-warmepumpe'|value",
      "config": {}
    },
    "grundeigentumerschaft-bund-abteilung": {
      "label": "Welche Abteilung des Bundes ist Grundeigentümer?",
      "type": "text",
      "required": "true",
      "active-expression":
        "'Bund' in 'grundeigentumerschaft'|value|mapBy('name')",
      "config": {}
    }
  }
}
