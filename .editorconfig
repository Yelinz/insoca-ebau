# editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size  = 4

[*.js]
indent_style = space
indent_size  = 2

[*.sass]
indent_style = space
indent_size  = 2

[*.hbs]
indent_style = space
indent_size  = 2

[*.yml]
indent_style = space
indent_size  = 2

[Makefile]
indent_style = tab
indent_size  = 4

[*.json]
indent_style = space
indent_size  = 2

[*.{phtml,xml,svg}]
indent_style = tab
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false
